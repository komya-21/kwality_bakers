

<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Employee Payrolls</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
<%= link_to 'New Employee Payroll', new_employee_payroll_path ,class: "btn btn-primary"%>
<div align="right">
<%= link_to "Earnings" , earnings_employee_payrolls_path ,class: "btn btn-danger"%>|
<%= link_to "Deductions" , deductions_employee_payrolls_path,class: "btn btn-success" %>
</div>                        
<%#= link_to 'New Color', new_color_path,
            :class => 'btn btn-primary' %>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Category name</th>
      <th>Percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_payrolls.each do |employee_payroll| %>
      <tr>
        <td><%= employee_payroll.category_name %></td>
        <td><%= employee_payroll.percentage %></td>
        <!-- <td><%#= employee_payroll.is_deduction %></td> -->
        <td><%= link_to 'Show', employee_payroll %></td>
        <td><%= link_to 'Edit', edit_employee_payroll_path(employee_payroll) %></td>
        <td><%= link_to 'Destroy', employee_payroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>
</section>



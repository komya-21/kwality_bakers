<%- model_class = Vendor -%>
 <section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                            <div class="panel-body">


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @vendor.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @vendor.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @vendor.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:password) %>:</strong></dt>
  <dd><%= @vendor.password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delivery_area) %>:</strong></dt>
  <dd><%= @vendor.delivery_area %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gst_no) %>:</strong></dt>
  <dd><%= @vendor.gst_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pan_no) %>:</strong></dt>
  <dd><%= @vendor.pan_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @vendor.contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alternate_contact) %>:</strong></dt>
  <dd><%= @vendor.alternate_contact %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comission) %>:</strong></dt>
  <dd><%= @vendor.comission %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              vendors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_vendor_path(@vendor), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              vendor_path(@vendor),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </section>

<%- model_class = Vendor -%>

 <section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Vendor Details</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">


       <%= link_to t('.new', :default => t("helpers.links.new")),
            new_vendor_path,
            :class => 'btn btn-primary' %><br>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">


            

  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:delivery_area) %></th>
      <th><%= model_class.human_attribute_name(:gst_no) %></th>
      <th><%= model_class.human_attribute_name(:pan_no) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:alternate_contact) %></th>
      <th><%= model_class.human_attribute_name(:comission) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= link_to vendor.id, vendor_path(vendor) %></td>
        <td><%= vendor.name %></td>
        <td><%= vendor.address %></td>
        <td><%= vendor.delivery_area %></td>
        <td><%= vendor.gst_no %></td>
        <td><%= vendor.pan_no %></td>
        <td><%= vendor.contact %></td>
        <td><%= vendor.alternate_contact %></td>
        <td><%= vendor.comission %></td>
        <td><%=l vendor.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      vendor_path(vendor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vendor_path(vendor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vendor_path(vendor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
</div>
</section>
<% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>







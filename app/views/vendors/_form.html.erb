<section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-warning">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Vendor</h3>
                                <div class="actions pull-right">
                                 <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <div class="panel-body">



<%= form_for @vendor, :html => { :class => "form-horizontal vendor" } do |f| %>

  <% if @vendor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h3>
      </div>
      <div class="panel-body">

        <ul>
        <% @vendor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  
    <%= f.label :address, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  
    <%= f.label :password, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.password_field :password, :class => 'form-control' ,placeholder: "(6 characters minimum)"%>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :gst_no, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :gst_no, :class => 'form-control' %>
    </div>
  
    <%= f.label :pan_no, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :pan_no, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
  
    <%= f.label :alternate_contact, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :alternate_contact, :class => 'form-control' %>
    </div>
  </div>
   

  <div class="form-group">
    <%= f.label :delivery_area, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :delivery_area, :class => 'form-control' %>
    </div>
 
    <%= f.label :comission, :class => 'control-label col-lg-1' %>
    <div class="col-lg-4">
      <%= f.text_field :comission, :class => 'form-control' %>
    </div>
  </div>
 

  <div class="form-group">
    <%= f.label :vendor_type, 'Regular', :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      
      <%= f.radio_button :vendor_type, 'Regular' %>
    </div>
    <%= f.label :vendor_type,'Custom', :class => 'control-label col-lg-1' %>
   <div class="col-lg-1">
    
    
      <%= f.radio_button :vendor_type, 'Custom' %>
    </div>
 

   <% if current_user.role == "SuperAdmin" %>
 
  <label class="col-lg-1 control-label">Location</label> 
    <div class="col-md-4">
    <%= f.select :location_id, Location.all.collect{|p| [p.name,p.id]},{prompt:true} ,class: "form-control",required: true%>

  </div>
   

  </div>
  <label class="col-lg-1 control-label">Opening Balance</label> 
    <div class="col-md-4">
    <%= f.text_field :opening_balance, class: "form-control",placeholder: "optional"%>
</div>
<% end %>
  

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>
</div>
</div>
</div>
</section>

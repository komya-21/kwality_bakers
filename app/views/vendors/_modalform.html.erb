<% modal ||= false %>
<% remote = modal ? true : false %>
<div class="modal-dialog">    
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Vendor</h4>
        </div>
        <div class="modal-body">


<%= form_for @vendor, url: {action: "create_vendor", controller: 'vendors'} ,:html => { :class => "form-horizontal vendor" } do |f| %>

  <% if @vendor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h3>
      </div>
      <div class="panel-body">

        <ul>
        <% @vendor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_area, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :delivery_area, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gst_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :gst_no, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pan_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :pan_no, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :contact, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alternate_contact, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :alternate_contact, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vendor_type, 'Regular', :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.radio_button :vendor_type, 'Regular' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vendor_type,'Custom', :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.radio_button :vendor_type, 'Custom' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comission, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :comission, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-warning' %>
      <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vendors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
      



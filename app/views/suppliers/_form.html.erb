<section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-warning">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Supplier</h3>
                                <div class="actions pull-right">
                                 <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <div class="panel-body">

<%= form_with(model: supplier, local: true) do |form| %>
  <% if supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% supplier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, :class => 'control-label col-lg-2'  %>
     <div class="col-lg-10">
    <%= form.text_field :name, id: :supplier_name,class: "form-control" %>
  </div>
</div>

   

  <div class="form-group">
    <%= form.label :address, :class => 'control-label col-lg-2'  %>
     <div class="col-lg-10">
    <%= form.text_field :address, id: :supplier_address,class: "form-control" %>
  </div>
</div>

  <div class="form-group">
    <%= form.label :contact, :class => 'control-label col-lg-2'  %>
     <div class="col-lg-10">
    <%= form.text_field :contact, id: :supplier_contact,class: "form-control"  %>
  </div>
</div>

  <div class="form-group">
    <%= form.label :email, :class => 'control-label col-lg-2'  %>
     <div class="col-lg-10">
    <%= form.text_field :email, id: :supplier_email,class: "form-control" %>
  </div>
</div>

  <div class="form-group">
    <%= form.submit "Submit",class: "btn btn-success" %>
    <%= link_to 'Back', suppliers_path,class: "btn btn-default" %>

  </div>
<% end %>
</div>
</div>
</div>
</div>
</section>
<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Suppliers</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                            <%#= link_to "Total Stock" , "/inwards/stock" , class: 'btn btn-primary '%>
<%#= link_to t('.new', :default => t("helpers.links.new")),
            new_inward_path,
            :class => 'btn btn-primary' %>
            <%= link_to 'New Supplier', new_supplier_path,class: "btn btn-primary" %>



       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address %></td>
        <td><%= supplier.contact %></td>
        <td><%= supplier.email %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>
</section>



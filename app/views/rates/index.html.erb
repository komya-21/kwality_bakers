
<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-warning">
                          <div class="panel-heading">
                            <h3 class="panel-title">Rates</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">

 <%= link_to 'New Rate', new_rate_path,class: "btn btn-danger" %>

       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">


  <thead>
    <tr>
      <th>Product</th>
      <th>Type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.product.name %></td>

        <% if rate.ptype == "Carcass Box" %>
        <td><%= rate.ptype+"\(#{rate.ctype}\)" %></td>
        <% else %>
        <td><%= rate.ptype %></td>
        <% end %>
        <td><%= rate.price %></td>
        <td><%= link_to 'Show', rate %></td>
        <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
        <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>
</section>



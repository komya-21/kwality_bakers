<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Payslips
</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                            

 <%#= link_to t('.new', :default => t("helpers.links.new")),
            new_employee_path,
            :class => 'btn btn-primary' %>
       

  <div class="table-responsive"> 
  <table class="table">         

  <thead>
    <tr>
      <th>Employee</th>
      <th>Earning</th>
      <th>Deduction</th>
      <th>Date</th>
      <th>Basic salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payslips.each do |payslip| %>
      <tr>
        <td><%= payslip.employee.name if payslip.employee.present? %></td>
        <td><%= payslip.earning %></td>
        <td><%= payslip.deduction %></td>
        <td><%= payslip.date %></td>
        <td><%= payslip.basic_salary %></td>
        <td><%= link_to 'Show', payslip %></td>
        <td><%= link_to 'Edit', edit_payslip_path(payslip) %></td>
        <td><%= link_to 'Destroy', payslip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>
</div>
</section>

<%#= link_to 'New Payslip', new_payslip_path %>

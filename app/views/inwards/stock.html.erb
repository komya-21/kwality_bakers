<%- model_class = Inward -%>

<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Inward Details</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                           

<p>
  Download:
 <%= link_to "Excel", export_stock_current_inventories_path(format: "xlsx"), class: 'btn btn-success' %>
</p>

       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">



	<thead>
	  <tr>
		<th>Product</th>
		<th>Quantity</th>
		<th></th>
		<th></th>
		<th></th>
		<th><%= link_to "Reset All" , reset_all_current_inventories_path,class: "btn btn-warning btn-xs" %><br></th>
	  </tr>
    </thead>
    <tbody>
	<% @current_inventories.each do |c| %>
		<tr>
			<td><%= c.product.name if c.product.present?%></td>
			<td><%= c.current_quantity %><%= c.product.unit if c.product.unit.present? %></td>
			<td><%= link_to "Show" ,current_inventory_path(c),class: "btn btn-default btn-xs"  %></td>
			<td><%= link_to "Edit" ,edit_current_inventory_path(c),class: "btn btn-default btn-xs" %></td>
			<td><%= link_to "Reset" , reset_current_inventory_path(c),class: "btn btn-default btn-xs" %></td>
			
			<td><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      current_inventory_path(c),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %></td>
		</tr>
	<% end %>

	</tbody>

</table>
</div>
</div>
</div>
</div>
</section>


<% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>
        
       
       
       

  
     

     

          







	
	
	
		










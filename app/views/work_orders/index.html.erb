 <section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title">Work Orders</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">

 <%= link_to 'New Work Order', new_work_order_path  ,class: "btn btn-primary" %>

       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

  <thead>
    <tr>
      <th>Width</th>
      <th>Depth</th>
      <th>Height</th>
      <th>Quantity</th>
      <th>Color</th>
      <th>Side</th>
      <th>Skirting</th>
      <th>Horizontal</th>
      <th>Vertical</th>
      <th>Center</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <td><%= work_order.width %></td>
        <td><%= work_order.depth %></td>
        <td><%= work_order.height %></td>
        <td><%= work_order.quantity %></td>
        <td><%= work_order.color.code %></td>
        <td><%= work_order.side %></td>
        <td><%= work_order.skirting %></td>
        <td><%= work_order.horizontal %></td>
        <td><%= work_order.vertical %></td>
        <td><%= work_order.center %></td>
        <td><%= work_order.total %></td>
        <td><%= link_to 'Show', work_order %></td>
        <td><%= link_to 'Edit', edit_work_order_path(work_order) %></td>
        <td><%= link_to 'Destroy', work_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>
</div>
</section>
<% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>



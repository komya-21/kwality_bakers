        <td><%= m.wh %></td>
        <% else %>
        <td><%= m.width %></td>
        <% end %>
        <td><%= m.height %></td>
        <% if m.ftype == "Carcass Box" || m.ftype == "Drawer" || m.ftype == "White BSL Shelf  " %>
        <td><%= m.depth %></td>
        <% else %>
        <td>NA</td>
        <% end %>
        <% if m.ftype == "Carcass Box" %>
        <td><%= m.skirting %></td>
        <td><%= m.horizontal %></td>
        <td><%= m.vertical %></td>
        <% else %>
        <td>NA</td>
        <td>NA</td>
        <td>NA</td>
        <% end %>
        <td><%= m.quantity %></td>

            <% else %>
              <td></td>
            <% end %>
        <% else %>
          <td><%= link_to "Additionals" , addition_workorders_path(measurement_id: m.id,workorder_id: @workorder.id) %></td>
        <% end%>
        <% end %>
    </tr>
    <% end %>


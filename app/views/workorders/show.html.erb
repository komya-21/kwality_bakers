        <td><%= m.handle %></td>
        <td><%= m.handle_groove %></td>
        <td><%= m.handle_fitting %></td>
        <% else %>
        <td>NA</td>
        <td>NA</td>
        <td>NA</td>
        <td>NA</td>
        <% end %>

<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-warning">
                          <div class="panel-heading">
                            <h3 class="panel-title">Work Orders</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">


       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
	<tr>
		<th>Side</th>
		<th>Color</th>
		<th>Shade</th>
	</tr>
	<% if @additional.right == "Yes" %>
	<tr>
			
			<td>Right</td>
			
			<% @color = Color.find(@additional.right_color).code if @additional.right_color.present? %>
			<td><%= @color if @additional.right_color.present?%></td>
			<% if @additional.right_dark == "Yes" %>
			<td>Dark</td>
			<% elsif @additional.right_light == "Yes" %>
			<td>Light</td>
			<% end %>
			
		</tr>
		<% end %>
		<% if @additional.left == "Yes" %>
		<tr>
			
			<td>Left</td>
			
			<% @color = Color.find(@additional.left_color).code if @additional.left_color.present? %>
			<td><%= @color if @additional.left_color.present? %></td>
			<% if @additional.left_dark == "Yes" %>
			<td>Dark</td>
			<% elsif @additional.left_light == "Yes" %>
			<td>Light</td>
			<% end %>
		</tr>
		<% end %>
		<% if @additional.top == "Yes" %>
		<tr>
			<td>
			Top</td>
			<% @color = Color.find(@additional.top_color).code if @additional.top_color.present? %>
			<td><%= @color if @additional.top_color.present? %></td>
			<% if @additional.top_dark == "Yes" %>
			<td>Dark</td>
			<% elsif @additional.top_light == "Yes" %>
			<td>Light</td>
			<% end %>
		</tr>
		<% end %>
		<% if @additional.bottom == "Yes" %>
		<tr>
			<td>Bottom</td>
			<% @color = Color.find(@additional.bottom_color).code if @additional.bottom_color.present? %>
			<td><%= @color if @additional.bottom_color.present? %></td>
			<% if @additional.bottom_dark == "Yes" %>
			<td>Dark</td>
			<% elsif @additional.bottom_light == "Yes" %>
			<td>Light</td>
			<% end %>
		</tr>
		<% end %>
		
	</table>
<button name="subject" type="submit" value="HTML" class="btn btn-success" data-target="#exampleModalCenter" data-toggle="modal" id="add_color">Edit</button>|
	<%= link_to "Back" , workorder_path(@workorder),class: "btn btn-success" %>
	
</div>
</div>
</div>
</div>
</section>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

  <% modal ||= false %>
<% remote = modal ? true : false %>
<% @colors = Color.all %>
<div class="modal-dialog">    
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" id="exampleModalCenterTitle">Add Color</h4>
        </div>
        <div class="modal-body">
          <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <tr class="measurements">
              <%#= nested_form_for @workorder do |form| %>
              <%= form_for @additional ,url: {controller: "workorders",action: "update_additional",method: "PATCH",measurement_id: @additional.measurement_id,workorder_id: @workorder} do |form| %>


<td>Right&nbsp;&nbsp;<%= form.check_box :right , {},"Yes" , "No" %></td>
<%# @colors = Color.all %>
<%# byebug %>
<td><%= form.select :right_color , Color.all.collect{|c| [c.code,c.id]},{prompt: "Select Color"},class: "form-control"%></td>
<td><%= form.check_box :right_dark, {},"Yes" , "No" %>Dark</td>
<td><%= form.check_box :right_light, {},"Yes" , "No" %>Light</td>
</tr>
<tr>
<td>Left&nbsp;&nbsp;<%= form.check_box :left , {},"Yes" , "No" %></td>
<td><%= form.select :left_color ,Color.all.collect{|c| [c.code,c.id]},{prompt: "Select Color"},class: "form-control"%></td>
<td><%= form.check_box :left_dark, {},"Yes" , "No" %>Dark</td>
<td><%= form.check_box :left_light, {},"Yes" , "No" %>Light</td>
</tr>
<tr>
<td>Top&nbsp;&nbsp;<%= form.check_box :top , {},"Yes" , "No" %></td> 
<td><%= form.select :top_color , Color.all.collect{|c| [c.code,c.id]},{prompt: "Select Color"},class: "form-control"%></td>
<td><%= form.check_box :top_dark, {},"Yes" , "No" %>Dark</td>
<td><%= form.check_box :top_light, {},"Yes" , "No" %>Light</td>
</tr>
<tr>
<td>Bottom&nbsp;&nbsp;<%= form.check_box :bottom , {},"Yes" , "No" %></td>
<td><%= form.select :bottom_color , Color.all.collect{|c| [c.code,c.id]},{prompt: "Select Color"},class: "form-control"%></td>
<td><%= form.check_box :bottom_dark, {},"Yes" , "No" %>Dark</td>
<td><%= form.check_box :bottom_light, {},"Yes" , "No" %>Light</td>
</tr>
</table>

<%= form.submit "Submit" ,class: "btn btn-success",id: "submit"%>

<% end %>
</div>
</div>
</div>
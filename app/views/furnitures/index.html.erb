

<section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                          <div class="panel-heading">
                            <h3 class="panel-title"></h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                            

<%= link_to 'New Work Order', new_furniture_path ,class: "btn btn-primary"%>

       
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">



  <thead>
    <tr>
      <th>Product</th>
      <th>Type</th>
      <th>Width</th>
      <th>Depth</th>
      <th>Height</th>
      <th>Skirting</th>
      <th>Color</th>
      <th>Side</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
     
      
    </tr>
  </thead>

  <tbody>
    <% @work_orders.each do |w| %>
      <tr>
        <td><%= w.furniture_product%></td>
         <td><%= w.furniture_type%></td>
          <td><%= w.width %></td>
           <td><%= w.depth %></td>
            <td><%= w.height %></td>
             <td><%= w.skirting%></td>
              <td><%= w.color.code if w.color.present? %></td>
               <td><%= w.side %></td>
                <td><%= w.quantity %></td>
                 <td><%= w.total %></td>
        <td><%= link_to 'Show', furniture_path(w.furniture_id) %></td>
        <td><%= link_to 'Edit', edit_furniture_path(w.furniture_id) %></td>
        <td><%= link_to 'Destroy',furniture_path(w.furniture_id), method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
</div>
</section>
<% content_for :javascript do %>
                   <!--Load these page level functions-->
                    <script>
                    $(document).ready(function() {
                         $('#example').dataTable();
                    });
                    </script>
            <% end %>


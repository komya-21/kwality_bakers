
<section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class=" panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Return</h3>
                                <div class="actions pull-right">
                                 <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <div class="panel-body">

<%= form_for @return, :html => { :class => "form-horizontal return" } do |f| %>

  <% if @return.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@return.errors.count, "error") %> prohibited this return from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @return.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date_of_return, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :date_of_return, value: Date.today ,:class => 'form-control' %>
    </div>
    <%=f.error_span(:date_of_return) %>
  </div>
  <div class="form-group">
    <%= f.label :invoice_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :invoice_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:invoice_number) %>
  </div>
  <div class="form-group">
    <%= f.label :vendor_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :vendor_id, Vendor.all.collect{|v| [v.name, v.id]},{prompt:true}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vendor_id) %>
  </div>
  <div class="form-group">
    <%= f.label :inward_product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :product_id,Product.all.collect{|i| [i.name , i.id]}, {prompt:true},:class => 'form-control' %>
    </div>
    <%=f.error_span(:inward_product_id) %>
  </div>
  <div class="form-group">
    <%= f.label :return_quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :return_quantity, :class => 'form-control' %>
    </div>
    <%=f.error_span(:return_quantity) %>
  </div>
  <div class="form-group">
    <%= f.label :purpose, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :purpose, :class => 'form-control' %>
    </div>
    <%=f.error_span(:purpose) %>
  </div>
  <div class="form-group">
    <%= f.label :receipt_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :receipt_no, :class => 'form-control' %>
    </div>
    <%=f.error_span(:receipt_no) %>
  </div>
  <div class="form-group">
    <%= f.label :return_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :return_type, options_for_select(['OK','NOT-OK']),{prompt:true},
       :class => 'form-control' %>
    </div>
    <%=f.error_span(:return_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                returns_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
</div>
</div>
</div>
</div>
</section>
 </script>
      <head>
        <link href="/assets/select2.css" rel="stylesheet"/>
        <script src="/assets/select2-full.js"></script>
        <script>
            $(document).ready(function() { $("#return_vendor_id").select2(); });
        </script>
    </head>
 </script>
      <head>
        
        <script>
            $(document).ready(function() { $("#return_product_id").select2(); });
        </script>
    </head>